@model Usuarios
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Alterar Cadastro";
}

<h1>@ViewData["Title"]</h1>

<p class="text-danger">@ViewData["mensagem"]</p>

<form method="post" asp-action="alterar">
    <input value=@Context.Session.GetInt32("IdUsuario") type="hidden">
<p>    
    <label asp-for = "Nome">Nome: </label>
    <input asp-for = "Nome"></p>
<p>
    <label asp-for = "Sobrenome">Sobrenome: </label>
    <input asp-for = "Sobrenome"></p>
<p>
    <label asp-for = "Email">Email: </label>
    <input asp-for = "Email" type="email"></p>
<p>
    <label asp-for = "DataNascimento">Data de Nascimento: </label>
    <input asp-for = "DataNascimento" type="date"></p>
<p>
    <label asp-for = "CPF">CPF: </label>
    <input asp-for = "CPF" maxlength="14" data-mask="000.000.000-00"></p>
<p>
    <label asp-for = "Telefone">Telefone: </label>
    <input asp-for = "Telefone" maxlength="15" data-mask="(00)0 0000-0000"></p>
<p>
    <label asp-for = "Sexo">Sexo: </label>
    <select asp-for = "Sexo" >

        <option disabled selected>Selecione...</option>
        <option >Masculino</option>
        <option >Feminino</option>
     
    </select></p>
<p>   

    <label asp-for = "Senha">Senha: </label>
    <input asp-for = "Senha" type="password">
 </p>  
 <p>
     <input asp-for="Id" type="hidden">
     <input type="submit" value="Alterar Cadastro">
 </p> 
</form>
